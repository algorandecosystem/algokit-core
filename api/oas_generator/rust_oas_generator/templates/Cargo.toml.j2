[package]
name = "algod_client"
version = "0.1.0"
edition = "2021"
description = "Algorand algod REST API client with MessagePack support"
license = "MIT"
repository = "https://github.com/algorandfoundation/algokit-core"

[dependencies]
# Core dependencies
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
serde_with = { version = "3.0", features = ["base64"] }
serde_repr = "0.1"
reqwest = { version = "0.12", features = ["json", "stream"] }
tokio = { version = "1.0", features = ["full"] }
base64 = "0.22"
url = "2.0"

# AlgoKit dependencies
algokit_transact = { path = "../algokit_transact" }

# Error handling
thiserror = "1.0"

# Optional features
uuid = { version = "1.0", features = ["v4"] }

[dev-dependencies]
tokio-test = "0.4"

[features]
default = []
